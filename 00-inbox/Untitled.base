views:
  - type: table
    name: Table
    filters:
      and:
        - type == "Task"
    order:
      - file.name
      - status
      - Done
      - file.ctime
      - date modified
    sort:
      - property: date created
        direction: ASC
    columnSize:
      file.name: 352
  - type: cards
    name: View
